<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="RecipeTheme" parent="MainTheme">
		<item name="android:layout_margin">16dp</item>
	</style>

	<style name="recipe.RecipeTitle" parent="RecipeTheme">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">24sp</item>
		<item name="android:text">@string/n_carregado</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">24dp</item>
		<item name="android:paddingBottom">76dp</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:layout_margin">0dp</item>
		<item name="android:layout_marginTop">24dp</item>
		<item name="android:layout_marginBottom">16dp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@android:color/holo_blue_dark</item>
	</style>

	<style name="recipe.RecipeImage" parent="RecipeTheme">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:background">@android:color/white</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">150dp</item>
		<item name="android:scaleType">fitCenter</item>
	</style>

	<style name="recipe.movieFavoriteButton" parent="RecipeTheme">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:text">@string/detail_action_fav</item>
	</style>

	<style name="recipe.servingLabel" parent="detail.textDetailsLabel">
		<item name="android:textSize">16sp</item>
		<item name="android:layout_marginLeft">28dp</item>
		<item name="android:layout_marginRight">16dp</item>
	</style>

	<style name="recipe.recycleView" parent="RecipeTheme">
		<item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
		<item name="android:layout_height">150dp</item>
	</style>
</resources>