<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="StepTheme" parent="MainTheme">
		<item name="android:layout_margin">16dp</item>
	</style>

	<style name="step.StepTitle" parent="StepTheme">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">24sp</item>
		<item name="android:text">@string/n_carregado</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">24dp</item>
		<item name="android:paddingBottom">76dp</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:layout_margin">0dp</item>
		<item name="android:layout_marginTop">24dp</item>
		<item name="android:layout_marginBottom">16dp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@android:color/holo_blue_dark</item>
	</style>

	<style name="step.videoContainer" parent="RecipeTheme">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:background">@android:color/white</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">150dp</item>
		<item name="android:scaleType">fitCenter</item>
	</style>

	<style name="step.btNext" parent="RecipeTheme">
		<item name="android:textColor">@color/colorPrimary</item>
		<item name="android:visibility">gone</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:background">@color/colorPrimaryDark</item>
	</style>

	<style name="step.description" parent="detail.textDetails">
		<item name="android:textColor">@android:color/darker_gray</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">16sp</item>
		<item name="android:text">@string/n_carregado</item>
	</style>

</resources>