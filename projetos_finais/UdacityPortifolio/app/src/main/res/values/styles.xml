<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonAction" parent="android:Widget.Button.Small">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="android:padding">@dimen/main_button_padding</item>
    </style>

    <style name="MainTitle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/main_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
    </style>

</resources>
